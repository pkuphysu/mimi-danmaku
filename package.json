{
	"name": "mimi-danmaku",
	"version": "2.0.0",
	"description": "Mimi Danmaku client for desktop platform.",
	"main": "app/main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"build": {
		"productName": "Mimi Danmaku",
		"artifactName": "${productName}-${version}.${ext}",
		"win": {
			"legalTrademarks": "Mimi Personal"
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false,
			"menuCategory": true,
			"allowElevation": false
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stevenjoezhang/mimi-danmaku"
	},
	"keywords": [
		"Mimi",
		"Danmaku",
		"Client"
	],
	"author": "Mimi <stevenjoezhang@gmail.com> https://zhangshuqiao.org",
	"readme": "https://github.com/stevenjoezhang/mimi-danmaku/blob/master/README.md",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/stevenjoezhang/mimi-danmaku/issues"
	},
	"homepage": "https://github.com/stevenjoezhang/mimi-danmaku",
	"devDependencies": {
		"electron": "8.0.1",
		"electron-builder": "22.3.2"
	}
}
